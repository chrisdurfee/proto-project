# Proto Project Docker Environment Configuration
# Copy this file to .env and customize as needed
# Or run: node sync-config.js to auto-generate from common/Config/.env

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=proto
DB_USERNAME=proto_user
DB_PASSWORD=proto_password
DB_ROOT_PASSWORD=root

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (Universal SMTP)
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@proto-project.com
MAIL_FROM_NAME="Proto Project"
# Set to 'true' to enable email sending in development (disabled by default)
MAIL_SENDING_ENABLED=false

# Application Environment
APP_ENV=development

# Automation Controls
# Set to 'true' to automatically run migrations on container startup
AUTO_MIGRATE=true

# Domain Configuration (used by sync-config.js)
DOMAIN_NAME=localhost

# Development Settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
