# Proto Project PRODUCTION Environment Configuration
# IMPORTANT: This file contains production security defaults
# Copy this file to .env for production deployment

# SECURITY: Generate strong, unique passwords for production
# Use tools like: openssl rand -base64 32

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=proto
DB_USERNAME=proto_app_user
# REQUIRED: Set a strong password (min 20 chars, mixed case, numbers, symbols)
DB_PASSWORD=
# REQUIRED: Set a strong root password (min 20 chars, mixed case, numbers, symbols)
DB_ROOT_PASSWORD=

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# REQUIRED: Set a strong password (min 32 chars recommended)
REDIS_PASSWORD=

# Application Environment
APP_ENV=production

# Security Settings
CORS_ENABLED=false
# CORS_ORIGINS= # Leave empty or set specific domains for production

# Automation Controls
AUTO_MIGRATE=false  # Disable auto-migration in production

# Domain Configuration
DOMAIN_NAME=yourdomain.com

# SECURITY: Ensure these are not set in production
# DEBUG=false
# DEVELOPMENT_MODE=false
