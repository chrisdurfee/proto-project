# Proto Project Docker Environment Configuration
# Copy this file to .env and customize as needed
# Or run: node sync-config.js to auto-generate from common/Config/.env

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=proto
# CHANGE IMMEDIATELY: use a unique, least-privilege user
DB_USERNAME=proto_app_user
# CHANGE IMMEDIATELY: minimum 20 chars mixed; NEVER commit real secret
DB_PASSWORD=ProtoApp2025!SecureDbPass#789
# Root password only used for administrative tasks. Keep it secret & rotate.
DB_ROOT_PASSWORD=ProtoRoot2025!AdminPass#456

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# Set a strong password (>=32 chars) â€“ leave blank ONLY for throwaway dev
REDIS_PASSWORD=ProtoRedis2025!CacheSecure#123456789

# Application Environment
APP_ENV=development

# Automation Controls
# Set to 'true' to automatically run migrations on container startup
AUTO_MIGRATE=true

# Domain Configuration (used by sync-config.js)
DOMAIN_NAME=localhost

# Development Settings
CORS_ENABLED=true
CORS_ORIGINS=https://localhost:3000,https://localhost:3001,https://localhost:3002
